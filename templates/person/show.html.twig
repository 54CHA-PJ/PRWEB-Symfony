{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Person_id</th>
                <td>{{ person.personId }}</td>
            </tr>
            <tr>
                <th>Person_firstname</th>
                <td>{{ person.personFirstname }}</td>
            </tr>
            <tr>
                <th>Person_lastname</th>
                <td>{{ person.personLastname }}</td>
            </tr>
            <tr>
                <th>Person_email</th>
                <td>{{ person.personEmail }}</td>
            </tr>
            <tr>
                <th>Person_birthdate</th>
                <td>{{ person.personBirthdate ? person.personBirthdate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_person_index') }}">back to list</a>

    <a href="{{ path('app_person_edit', {'person_id': person.getPersonId}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
